<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/write_background"
    android:scaleType="centerCrop"
    tools:context=".DiaryActivity">

    <EditText
        android:id="@+id/et_write_title"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@null"
        android:ems="10"
        android:hint="제목을 입력하세요"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#0B0B0B"
        android:textColorHint="#9E9E9E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_write_content"
        android:layout_width="333dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:ems="10"
        android:gravity="top|left"
        android:hint="일기를 작성하세요."
        android:inputType="textMultiLine|textPersonName"
        android:paddingLeft="35dp"
        android:paddingTop="40dp"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:textColor="#040303"
        android:textColorHint="#9E9E9E"
        android:textColorLink="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_write_title" />

    <Button
        android:id="@+id/btn_write_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@null"
        android:text="작성"
        android:textColor="#4DD0E1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_write_title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_write_cancel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@null"
        android:text="취소"
        android:textColor="#9E9E9E"
        app:layout_constraintEnd_toStartOf="@+id/et_write_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider3"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#AAA7A7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

</androidx.constraintlayout.widget.ConstraintLayout>